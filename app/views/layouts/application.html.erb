<!DOCTYPE html>
<html>
  <head>
    <title>StrangeMuseum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
      <ul>
        <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
        <li><%= link_to '博物館一覧', museums_path %></li>
        <li><%= link_to 'ユーザー一覧', users_path %></li>
        <li><%= link_to '掲示板一覧', forums_path %></li>
        <li><%= link_to 'About', about_path %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      </ul>
      <% else %>
      <ul>
        <li><%= link_to '博物館一覧', museums_path %></li>
        <li><%= link_to 'About', about_path %></li>
        <li><%= link_to 'ログイン', new_user_session_path %></li>
        <li><%= link_to 'ユーザー登録', new_user_registration_path %></li>
      </ul>
      <% end %>
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.select :range, options_for_select([["ユーザー","User"],["博物館","Museum"]]) %>
        <%= f.select :search, options_for_select([["完全一致","perfect_match"],["部分一致","partial_match"]]) %>
        <%= f.text_field :word %>
        <%= f.submit '検索する！' %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
