<%= form_with model:@genre, local:true do |f| %>
  <%= f.text_field :name %>
  <%= f.submit 'ジャンル登録' %>
<% end %>

<table>
  <tr>
    <th>ジャンル名</th>
    <th>施設数</th>
  </tr>
<% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= genre.museums.count %>件</td>
    <td><%= link_to '削除', genre_path(genre.id), method: :delete %></td>
  </tr>
<% end %>
</table>