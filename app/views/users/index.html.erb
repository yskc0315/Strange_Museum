<table>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th>訪問軒数</th>
      <th>コメント数</th>
      <th></th>
    </tr>
  　<% @users.each do |user| %>
      <tr>
        <td>
          <% if user.forum_host?(user) %>
            掲示板作成中!
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, size:"40x40", format:"jpeg", fallback:"no_image.png" %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.visits.count %>軒</td>
        <td><%= user.posts.count %>件</td>
        <% if user != current_user %>
          <td>
            <% if user.followed_by?(current_user) %>
              <%= link_to 'フォロー中', user_relation_path(user.id, user.id), method: :delete %>
            <% else %>
              <%= link_to 'フォロー', user_relations_path(user.id), method: :post %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
</table>