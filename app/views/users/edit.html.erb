<div class="page-title">
  <h3>
    <i class="fas fa-child"> プロフィール編集</i>
  </h3>
</div>

<%= render "layouts/error_messages", resource: @user %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <% if @user.id == current_user.id %>
      <table class="table table-borderless">
        <%= form_with model:@user, local:true do |f| %>
          <tr>
            <th>
              <%= f.label :profile_image, 'アイコン画像' %>
            </th>
            <td>
              <%= f.attachment_field :profile_image %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :name, 'ニックネーム' %>
            </th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :introduction, '自己紹介' %>
            </th>
            <td>
              <%= f.text_area :introduction, size:"40x5", placeholder:"空欄でも大丈夫です！" %>
            </td>
          </tr>
          <tr align="center">
            <th colspan="2">
              <%= f.submit 'プロフィール更新！', class:"btn btn-success" %>
            </th>
            <td></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>